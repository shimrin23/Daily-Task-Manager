<Window x:Class="TaskManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400" Background="LightBlue">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username" Margin="5"/>
            <TextBox Name="UsernameInput" Width="200" Height="30"/>

            <TextBlock Text="Password" Margin="5"/>
            <PasswordBox Name="PasswordInput" Width="200" Height="30"/>

            <Button Content="Login" Width="100" Margin="10" Click="Login_Click"/>
            <TextBlock Name="ErrorMessage" Foreground="Red" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
